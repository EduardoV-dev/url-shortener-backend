{
  "name": "url-shortener-backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Eduardo Varela",
  "license": "MIT",
  "_moduleAliases": {
    "@": "./src"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:check": "tsc --noEmit",
    "dev": "env-cmd -f .env.local nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "format": "prettier --write **/*.{js,mjs,ts,mts,json,yaml}",
    "format:check": "prettier --check **/*.{js,mjs,ts,mts,json,yaml}",
    "lint": "eslint **/*.{js,mjs,ts,mts} --fix",
    "lint:check": "eslint **/*.{js,mjs,ts,mts}",
    "prepare": "node .husky/install.mjs",
    "prisma:drop:dev": "env-cmd -f .env.local prisma migrate reset",
    "prisma:generate:dev": "env-cmd -f .env.local prisma generate",
    "prisma:migrate:dev": "env-cmd -f .env.local prisma migrate dev --name init",
    "start": "node dist/src/app.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:queue": "jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@prisma/language-server": "^6.7.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.5",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "babel-jest": "^29.7.0",
    "env-cmd": "^10.1.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
